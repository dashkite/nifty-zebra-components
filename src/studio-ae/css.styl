row-gap(size)
  margin -size
  & > *
    margin size

h1
  font-size 3.6rem
  line-height 4rem

.main
  display flex
  row-gap 1rem

  // adapted from: https://codepen.io/rstrangh/pen/dGweRo

  .navigator
    flex 1
    max-width 24rem
    font-size 1rem
    line-height 1.5rem

    ul
      list-style-type none
      padding 0
      margin 0

      li
        padding 0.5rem
        margin 0
        border-radius 0.25rem

      ul
        overflow hidden
        transition all 0.2s ease-in-out

        li
          margin-left 2rem
          user-select none
          &:focus
            background purple
            color white
            :before
              filter brightness(0) invert(1)

      span
        &:before
          display inline-block
          height 1.25rem
          width 1.25rem
          margin-right 0.5rem
          content url("data:image/svg+xml;base64,")

      label
        padding 0
        margin 0
        user-select none
        cursor pointer
        display inline-flex
        &:before
          display inline-block
          height 1.5rem
          width 1.5rem
          content url("data:image/svg+xml;base64,")
          margin 0
          padding 0
          margin-right 0.5rem

      input
        padding 0
        margin 0
        position absolute
        opacity 0
        z-index -1

      input:checked + label:before
        content url("data:image/svg+xml;base64,")

      input + label + ul
        animation-name slideOut
        animation-duration 0.25s
        animation-fill-mode both

      input:checked + label + ul
        animation-name slideIn
        animation-duration 0.25s
        animation-fill-mode both

  .editor
    flex 3
    max-width 80ch
    font-size 1rem

@keyframes slideIn {
  0% {
    max-height: 0;
    opacity: 0;
  }

  100% {
    max-height: 999px;
    opacity: 1;
  }
}

@keyframes slideOut {
  0% {
    height: auto;
    opacity: 1;
  }

  100% {
    height: 0;
    opacity: 0;
  }
}
