form
  header

    h1 Add File

  section
    .field
      label
        span Path
        input(
          type = "text"
          required = "true"
          value = path
        )

      .hint
        :markdown
          Enter the path for the file you want to add,
          ex: */css/index.styl*.

  footer
    nav
      a( name = "cancel" href = "#") Cancel
      button Add
